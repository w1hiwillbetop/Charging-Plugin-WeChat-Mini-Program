.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  height: 80vh;
  text-align: center;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 80rpx;
  font-weight: bold;
  color: white;
  background-color: #ff4d4f;
  border-radius: 50%;
  margin-bottom: 30rpx;
}

.error-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.error-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
  white-space: pre-wrap;
}

.back-btn {
  background-color: #1aad19;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
}